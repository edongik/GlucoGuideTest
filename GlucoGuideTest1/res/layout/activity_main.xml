<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	                
    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:gravity="center_vertical|center" >

            <LinearLayout
                android1:layout_width="wrap_content"
                android1:layout_height="match_parent"
                android1:layout_weight="5"
                android1:gravity="center_vertical|center" >

                <TextView
                    android1:id="@+id/textTitle"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:paddingLeft="25dip"
                    android1:text="Image List"
                    android1:textSize="17sp" />


            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>
        
    <ListView
        android1:id="@+id/listView1"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/topLinearLayout"
        android1:background="@color/white"
        android1:divider="@color/divider"
        android1:dividerHeight="1dp"
        android1:drawSelectorOnTop="false"
        android1:listSelector="@drawable/list_bg" >

    </ListView>



</LinearLayout>